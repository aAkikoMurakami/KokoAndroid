<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kokoandroid.ui.BoardFragment">

    <RelativeLayout
        android:id="@+id/board_empty_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_view_board_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/board_is_empty"
            android:textSize="24sp"
            android:textColor="@color/board_empty_text" />

        </RelativeLayout>

    <ListView
        android:id="@+id/list_view_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <FrameLayout
        android:id="@+id/button_post_layout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end">

        <Button
            android:id="@+id/button_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_post_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_btn_post"
            android:adjustViewBounds="false"
            android:padding="16dp" />

    </FrameLayout>

</FrameLayout>