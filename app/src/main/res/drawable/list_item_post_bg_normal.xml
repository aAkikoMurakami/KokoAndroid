<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#09ffffff" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>
    <item
        android:top="6dp" android:bottom="6dp" android:right="6dp" android:left="6dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/post_list_item_bg_stroke" />
            <corners
                android:radius="9dp" />
        </shape>
    </item>
    <item
        android:top="8dp" android:bottom="8dp" android:right="8dp" android:left="8dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/post_list_item_bg_solid" />
            <corners
                android:radius="8dp" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp" />
        </shape>
    </item>
</layer-list>